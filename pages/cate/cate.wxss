page{
    height: 100%;
}

.cates_container{
    height: 100%;
    display: flex;
}
.left_menu{
    flex: 2;
}
.menu_item{
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
}
.active{
    color: red;
    border-left: 5rpx solid red;
}

.right_menu{
    flex: 5;
}
.goods_title{
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.delimiter{
    color: #ccc;
    padding: 0 10rpx;
}
.goods_list{
    display: flex;
    flex-wrap: wrap;
}
.goods_list navigator{
    width: 33.33%;
    text-align: center;
}
.goods_list image{
    width: 50%;
}