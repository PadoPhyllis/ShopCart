.goods_item{
    display: flex;
    border-bottom: 2rpx solid #ccc;
}

.goods_img_wrap{
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
}
.goods_img_wrap image{
    width: 70%;
}

.goods_info_wrap{
    flex: 3;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.goods_name{
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orinet: vertical;
    -webkit-line-clamp: 2;
}
.goods_price{
    color: #ccc;
    font-size: 32rpx;
}