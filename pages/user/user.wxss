page{
    background-color: #edeceB;
}

.user_info_wrap{
    height: 45vh;
    overflow: hidden;
    background-color: #eb4450;
    position: relative;
}
.user_img_wrap{
    position: relative;
}
.user_bg{
    height: 50vh;
    filter: blur(10rpx);
}
.user_info{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 20%;
    text-align: center;
}
.user_icon{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}
.user_name{
    color: #fff;
    margin-top: 40rpx;
}
.user_btn{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 40%;
    border: 2rpx solid #ccc;
    color: #000;
    font-size: 30rpx;
    padding: 30rpx;
    background-color: #fff;
    border-radius: 20rpx;
}

.user_content{
    position: relative;
}
.user_main{
    padding-bottom: 100rpx;
    position: relative;
    width: 90%;
    left: 50%;
    transform: translateX(-50%);
    top: -40rpx;
    color: #666;
}
.history_wrap{
    background-color: #fff;
    display: flex;
}
.history_wrap navigator{
    flex: 1;
    text-align: center;
    padding: 10rpx 0;
}
.his_num{
    color: #ccc;
}
.orders_wrap{
    background-color: #fff;
    margin-top: 20rpx;
}
.orders_title{
    padding: 15rpx;
    border-bottom: 1rpx solid #ccc;
}
.order_content{
    display: flex;
}
.order_content navigator{
    padding: 15rpx 0;
    flex: 1;
    text-align: center;
}
.iconfont{
    color: red;
    font-size: 40rpx;
}

.address_wrap{
    margin-top: 30rpx;
    background-color: #fff;
    padding: 20rpx;
}

.app_info_wrap{
    margin-top: 30rpx;
    background-color: #fff;
}
.app_info_contact{
    display: flex;
    justify-content: space-between;
}
.app_info_item{
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
}

.recommend_wrap{
    margin-top: 30rpx;
    background-color: #fff;
    padding: 20rpx;
}